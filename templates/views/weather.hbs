<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    {{>headerLinks}}
  </head>
  <body>
    {{>navbar}}
    <!-- main-menu -->
    <div class="container-fluid  main_menu">
        <div class="row">
            <div class="col-md-10 mx-auto">
                <div class="main_content">
                  <form class="temp_form">
                    <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                    <input type="submit" value="Search" id="submitBtn">
                  </form>
                </div>
                <div class="tempratureInfo">
                  <div class="top_layer">
                    <p id="day">Monday</p>
                    <p id="today_date">16 March</p>
                  </div>
                  <div class="main_layer ">
                    <p id="city_name">Get Output Here</p>
                    <div id="middle_layer" class="middle_layer data_hide">
                      <p><span id="temp">0</span> <sup>o</sup>C</p>
                      <p id="temp_status"><i class="fas fa-cloud-sun-rain"></i></p>
                    </div>
                  </div>
                </div>
            </div>
        </div>
    </div>
    <!-- main footer -->
    {{>footer}}
    <script src="js/main.js"></script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    {{>bodyFooterLinks}}
  </body>
</html>