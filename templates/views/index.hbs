<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    {{>headerLinks}}
  </head>
  <body>
    {{>navbar}}
    <!-- main-menu -->
    <div class="container-fluid  main_menu">
        <div class="row">
            <div class="col-md-10 mx-auto">
                <div class="row">
                    <div class="col-md-6 col-12 main_menu_left">
                        <p>Wellcome to the Weather App</p>
                        <h1>Get The Letest <span class="text_color">Weather</span> info of Your City</h1>
                        <a href="/weather"><button>Check Now</button></a>
                    </div>
                    <div class="col-md-6 col-12 main_menu_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img src="images/weather-1.jpg" style="height: 500px;" class=" w-100" alt="...">
                              </div>
                              <div class="carousel-item">
                                <img src="images/weather-2.jpg" style="height: 500px;" class=" w-100" alt="...">
                              </div>
                              <div class="carousel-item">
                                <img src="images/weather-3.jpg" style="height: 500px;" class=" w-100" alt="...">
                              </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- main footer -->
    {{>footer}}
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    {{>bodyFooterLinks}}
  </body>
</html>